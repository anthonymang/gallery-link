<form action="/auth/signup" method="POST">
  <label for="new-email">Email</label>
  <input id="new-email" type="email" name="email" required>

  <label for="new-password">Password</label>
  <input id="new-password" type="password" name="password" required>

  <label for="usertype">Sign up as:</label>
  <label for="artist">Artist</label>
  <input type="radio" name="usertype" id="artist" value="artist" required>
  <label for="gallery">Gallery</label>
  <input type="radio" name="usertype" id="gallery" value="gallery">

  <input type="submit" value="Sign up">

</form>
